<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linaraId"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/loginDudloo"
        android:src="@drawable/shoponlineimage"
        android:layout_width="300dp"
        android:layout_height="100dp">

    </ImageView>


    <EditText
        android:textAlignment="center"
        android:background="@drawable/input_design"
        android:hint="phone number"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:id="@+id/editPhNLoginId"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#f000"
        android:layout_width="250dp"
        android:layout_height="60dp">

    </EditText>
    <EditText
        android:textAlignment="center"
        android:background="@drawable/input_design"
        android:hint="Enter an Password"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:id="@+id/editTextPasssLogInId"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#f000"
        android:layout_width="250dp"
        android:layout_height="60dp">

    </EditText>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <CheckBox
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:id="@+id/rememCheckBoxId"
            android:text="Rmember Me"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>



        <TextView
            android:textColor="#3F51B5"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:text="Forget PassWord"
            android:textSize="16sp"
            android:id="@+id/textForgetPassId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>



    <Button
        android:textAllCaps="false"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="40dp"
        android:id="@+id/logInButtonId"
        android:text="Log In"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:text="I am Not Admin ?"
            android:textSize="16sp"
            android:id="@+id/textNotAdminId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

  <TextView
                android:layout_marginTop="30dp"
            android:layout_marginLeft="32dp"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:text="I am  Admin ?"
            android:textSize="16sp"
            android:id="@+id/textAdminId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>






    </LinearLayout>



</LinearLayout>

