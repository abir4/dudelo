<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ProductDetailsActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/blakkkk"
            android:id="@+id/immmmmmmmmId"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/productNameId"
            android:textSize="20sp"
            android:text="Product Name"
            android:textStyle="bold"
            android:layout_below="@+id/immmmmmmmmId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/productDescription"
            android:textSize="20sp"
            android:text="Product Description"
            android:textStyle="bold"
            android:layout_below="@+id/productNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/productPriceId"
            android:textSize="20sp"
            android:text="Product Price"
            android:textStyle="bold"
            android:layout_below="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

            android:layout_centerHorizontal="true"
            android:id="@+id/elegantButtonId"
            android:elevation="6dp"
            app:finalNumber="10"
            app:initialNumber="1"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/productPriceId"
            android:layout_width="200dp"
            android:layout_height="100dp">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


        <Button
            android:id="@+id/addtoCartButtonId"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textStyle="bold"
            android:textSize="20sp"/>






    </RelativeLayout>


    </LinearLayout>