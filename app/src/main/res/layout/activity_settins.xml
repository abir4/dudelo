<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettinsActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarSettinsId"
        android:background="#5A66A8"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSettinsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentStart="true"
                    android:id="@+id/textViewCloseSettinsId"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:text="Close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textViewUpdateSettinsId"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:text="Update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/settingProfileImageId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"
        android:layout_below="@+id/appbarSettinsId" />


    <TextView
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settingProfileImageId"
        android:id="@+id/textViewChageProfileId"
        android:textColor="#f000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Change profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>



    <EditText
        android:padding="10dp"
        android:textAlignment="center"
        android:hint="Phone number"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:id="@+id/editphoneNuberSettingId"
        android:layout_below="@+id/textViewChageProfileId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:padding="10dp"
        android:textAlignment="center"
        android:hint="Full Name"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:id="@+id/editFullNameSettingId"
        android:layout_below="@+id/editphoneNuberSettingId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:padding="10dp"
        android:textAlignment="center"
        android:hint="Address"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:id="@+id/editAddresSettingId"
        android:layout_below="@+id/editFullNameSettingId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







</RelativeLayout>